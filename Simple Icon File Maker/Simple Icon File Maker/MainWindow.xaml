<Window
    x:Class="Simple_Icon_File_Maker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Simple_Icon_File_Maker"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <StackPanel
            Grid.Column="0"
            Padding="20"
            Background="{ThemeResource SystemControlAccentAcrylicElementAccentMediumHighBrush}"
            Orientation="Vertical"
            Spacing="26">
            <Button
                x:Name="OpenBTN"
                Width="200"
                HorizontalAlignment="Center"
                Click="OpenBTN_Click">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <SymbolIcon Symbol="OpenFile" />
                    <TextBlock
                        Width="120"
                        Text="Open Image"
                        TextAlignment="Center" />
                </StackPanel>
            </Button>
            <Button
                x:Name="SaveBTN"
                Width="200"
                HorizontalAlignment="Center"
                Click="SaveBTN_Click"
                IsEnabled="False">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <SymbolIcon Symbol="SaveLocal" />
                    <TextBlock
                        Width="120"
                        Text="Save Icon"
                        TextAlignment="Center" />
                </StackPanel>
            </Button>

            <Image
                x:Name="OutputImage256"
                Width="256"
                HorizontalAlignment="Center" />
            <Image
                x:Name="OutputImage128"
                Width="128"
                HorizontalAlignment="Center" />
            <Image
                x:Name="OutputImage64"
                Width="64"
                HorizontalAlignment="Center" />
            <Image
                x:Name="OutputImage32"
                Width="32"
                HorizontalAlignment="Center" />
            <Image
                x:Name="OutputImage16"
                Width="16"
                HorizontalAlignment="Center" />
        </StackPanel>

        <Grid
            Grid.Column="1"
            AllowDrop="True"
            Background="{ThemeResource SystemControlAcrylicWindowBrush}"
            DragOver="Border_DragOver"
            Drop="Grid_Drop">
            <Canvas
                Name="dropHere"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Rectangle
                    Width="210"
                    Height="120"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    RadiusX="20"
                    RadiusY="20"
                    Stroke="{ThemeResource SystemAccentColor}"
                    StrokeDashArray="5"
                    StrokeLineJoin="Round" />
                <StackPanel
                    Margin="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
                    <SymbolIcon Height="40" Symbol="Copy" />
                    <TextBlock Text="Drag and Drop image here" />
                </StackPanel>
            </Canvas>
            <Image x:Name="MainImage" Margin="36" />
        </Grid>
    </Grid>
</Window>
