<Window
    x:Class="Simple_Icon_File_Maker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Simple_Icon_File_Maker"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <StackPanel
            Grid.Column="0"
            Padding="20"
            Orientation="Vertical"
            Spacing="20">
            <TextBlock Text="Controls here" />
            <Image x:Name="PreviewImage" />
            <Button
                x:Name="OpenBTN"
                Width="200"
                Padding="4"
                Click="OpenBTN_Click">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <SymbolIcon Symbol="OpenFile" />
                    <TextBlock Text="Open Image" />
                </StackPanel>
            </Button>
            <Button
                x:Name="SaveBTN"
                Width="200"
                Padding="4"
                Click="SaveBTN_Click">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <SymbolIcon Symbol="SaveLocal" />
                    <TextBlock Text="Save Icon" />
                </StackPanel>
            </Button>
        </StackPanel>

        <Border
            Grid.Column="1"
            AllowDrop="True"
            Background="DarkBlue"
            DragOver="Border_DragOver"
            Drop="Grid_Drop">
            <Image x:Name="MainImage" />
        </Border>
    </Grid>
</Window>
