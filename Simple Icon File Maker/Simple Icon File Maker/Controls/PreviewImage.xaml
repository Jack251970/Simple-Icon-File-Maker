<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Simple_Icon_File_Maker.Controls.PreviewImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Simple_Icon_File_Maker.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent" Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Image
        Name="mainImage"
        Margin="5"
        HorizontalAlignment="Center"
        CanDrag="False"
        IsRightTapEnabled="True"
        IsTapEnabled="True"
        Stretch="None">
        <Image.ContextFlyout>
            <MenuFlyout>
                <MenuFlyoutItem Click="MenuFlyoutItem_Click" Text="Save this image..." />
            </MenuFlyout>
        </Image.ContextFlyout>
    </Image>
</UserControl>
